<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd"
	default-lazy-init="true">

	<description>Apache CXF的Restful Web Service配置</description>

	<!-- jax-rs endpoint定义 -->
	<jaxrs:server id="serviceContainer" address="/rs">
		<jaxrs:serviceBeans>
			<ref bean="remoteCodeService" />
			<ref bean="remoteResourceService" />
			<ref bean="remoteUserService" />
			<ref bean="remoteRoleService" />
			<ref bean="remoteOrganizationService" />
			<ref bean="remoteOwnerService" />
			<ref bean="remoteAddressService" />
			<ref bean="remoteCommonService" />
			<ref bean="remotePromotionalCopyService" />

			<ref bean="remoteAccountProductService" />
			<ref bean="remoteAgentRevenueService" />
			<ref bean="remotePotentialService" />
			<ref bean="remotePotentialTrackService" />
			<ref bean="remoteSalesAgentService" />
			<ref bean="remotePotentialCustomersService" />
			<ref bean="remoteShortMessageService" />
			<ref bean="remotePotentialCustomersTrackService" />
			<ref bean="remoteImportLogService" />
			
			<ref bean="remoteOwnerLebalService" />
		
			<ref bean="remoteAccountOrderPayService" />
			<ref bean="remoteAccountOrderService" />
			<ref bean="remoteAccountReceiptService" />
			<ref bean="remoteAccountService" />
			<ref bean="remoteAgentRequestPayService" />
			<ref bean="remoteBillingProductPermissionService" />
			<ref bean="remoteBillingRecordService" />
			<ref bean="remoteVoucherService" />
			<ref bean="remoteCouponService" />
			<ref bean="remotePriceStrategyService" />
			
			<ref bean="remoteInformationLogsService" />
			<ref bean="remoteAcService" />
			
			<ref bean="remoteChartOfAccountService"/>
			<ref bean="remoteAgentCouponService"/>
			<ref bean="remoteSalesAgentLebalService"/>
			<ref bean="remoteApplyLoanService"/>
			<ref bean="remoteUserSalerService"/>
			<ref bean="remoteCustomerLogServiceImpl"/>
			<ref bean="remoteReceiptService"/>
			<ref bean="remoteOverviewService"/>
			<ref bean="remoteOCRMsgService" />
			<ref bean="remoteReportService" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<bean class="com.fasterxml.jackson.jaxrs.json.JacksonJaxbJsonProvider">
				<property name="mapper">
					<ref bean="objectMapper" />
				</property>
			</bean>
			<bean class="com.zqw.bss.framework.exception.InvokeFaultExceptionMapper" />
		</jaxrs:providers>


	</jaxrs:server>




	<bean id="objectMapper" class="com.fasterxml.jackson.databind.ObjectMapper">
		<property name="dateFormat">
			<ref bean="simpleDateFormat" />
		</property>

		<property name="serializationInclusion">
			<value>NON_NULL</value>
		</property>

	</bean>

	<bean id="simpleDateFormat" class="com.zqw.bss.util.AccountingSimpleDateFormat">
		<constructor-arg>
			<value>yyyy-MM-dd HH:mm:ss</value>
		</constructor-arg>
	</bean>

	<!-- WebService的实现Bean定义 -->
	<bean id="remoteReportService"
		class="com.zqw.bss.service.remote.biz.impl.RemoteReportServiceImpl" />
	<bean id="remoteAccountProductService"
