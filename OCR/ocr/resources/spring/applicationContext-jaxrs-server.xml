	<bean id="remoteAccountOrderPayService"
		class="com.zqw.bss.service.remote.billing.impl.RemoteAccountOrderPayServiceImpl" />
	<bean id="remoteAccountOrderService"
		class="com.zqw.bss.service.remote.billing.impl.RemoteAccountOrderServiceImpl" />
	<bean id="remoteAccountReceiptService"
