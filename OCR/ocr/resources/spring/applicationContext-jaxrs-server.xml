	<bean id="remotePriceStrategyService"
		class="com.zqw.bss.service.remote.billing.impl.RemotePriceStrategyServiceImpl" />
	<bean id="remoteVoucherService"
		class="com.zqw.bss.service.remote.mkt.voucher.impl.RemoteVoucherServiceImpl"></bean>
